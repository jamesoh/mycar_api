- if signed_in?
  .row
    %aside.span4
      %section
        = render 'shared/user_info'
      %section
        = render 'shared/car_form'
  .span8
    %h3 My Garage
    = render 'shared/garage'
- else
  .center.hero-unit
    %h1 TrueCar is the shit, check it out 
    %h2
      This is the home page for 
      %a{:href => "https://www.truecar.com"}TrueCar's 
      MyGarage sandbox application.
    - if signed_in?
      = "Already signed in."
    -else
      = link_to "Sign up now!", signup_path, class: "btn btn-large btn-primary"
  = link_to image_tag("truecar.png", size: "125x125", alt: "TrueCar"), 'http://www.truecar.com'
