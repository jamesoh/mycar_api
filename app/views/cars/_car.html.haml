%li
  %ul.desc
    = image_tag car.image
  %ul.desc
    Year: #{car.year}
  %br
  %ul.desc
    Make: #{car.make}
  %br
  %ul.desc
    Model: #{car.model}
  %br
  %ul.desc
    Vin: #{car.vin}
  %br

  %span.timestamp
    Added #{time_ago_in_words(car.created_at)} ago.
  - if current_user?(car.user)
    = link_to "delete", car, method: :delete,
                             data: { confirm: "You sure?" }
