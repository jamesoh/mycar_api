%li
  %ul.desc
    = image_tag car.data["img_url_large"]
  %ul.desc
    Year: #{car.data["year"]}
  %br
  %ul.desc
    Make: #{car.data["make_name"]}
  %br
  %ul.desc
    Model: #{car.data["model_name"]}
  %br
  %ul.desc
    Vin: #{car.vin}
  %br

  %span.timestamp
    Added #{time_ago_in_words(car.created_at)} ago.
  - if current_user?(car.user)
    = link_to "delete", car, method: :delete,
                             data: { confirm: "You sure?" }
